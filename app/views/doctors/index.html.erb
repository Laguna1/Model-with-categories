<p id="notice"><%= notice %></p>
<div class="container">
<h1 class="text-uppercase my-5">Index page</h1>

<h2>Doctors | <%= link_to 'New Category', new_category_path %></h2>

<table>
  <thead>
    <tr>
      <th>Fullname</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= link_to doctor.fullname, doctor_path(doctor) %></td>
        <td><%= doctor.category.name %></td>
        <td><%= link_to 'Show', doctor %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Doctor', new_doctor_path %>
</div>